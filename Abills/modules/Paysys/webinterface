#**********************************************************
#
#**********************************************************
sub paysys_load {
  my ($module,  $attr)=@_;
  
  eval { require "modules/Paysys/". $module .".pm" };
 
  if ($@) {
    print "Content-Type: text/html\n\n";
    print "Error: load module '". $module .".pm' $!". $html->br();
    print "Purchase module from http://abills.net.ua/". $html->br();
    print $@ if ($conf{PAYSYS_DEBUG});
    exit;
    return 0;
  }

  return 0;  
}

#**********************************************************
#
#**********************************************************
sub conf_gid_split {
  my ($attr) = @_;

  my $gid    = $attr->{GID};
  if ($attr->{PARAMS}) {
    my $params = $attr->{PARAMS};

    foreach my $key ( @$params ) {
      if ($conf{$key .'_'. $gid}) {
        $conf{$key} = $conf{$key .'_'. $gid};
      }
    }
  }
}




