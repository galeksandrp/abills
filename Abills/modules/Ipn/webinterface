  $FORM{allmonthes}='y';
  ipn_use();
}


#**********************************************************
# ipn_use();
#**********************************************************
sub ipn_use_users {

  $Ipn->{EX_GROUP_SEL} ="<select name='EX_GROUP'>\n";

  reports({ DATE      => $FORM{DATE}, 
  	        REPORT    => '',
  	        SHOW_HOURS => 'Y'
  	       });

 my %totals = ();



#Day reposrt
if (defined($FORM{DATE})) {

   $LIST_PARAMS{INTERVAL_TYPE} = 2;



#  $LIST_PARAMS{DATE}="$FORM{DATE}";
#  $pages_qs.="&DATE=$LIST_PARAMS{DATE}";
    my $list = $Ipn->reports_users({ %LIST_PARAMS });
    #Used Fraffic
    $table_sessions = $html->table( { width => '100%',
	                              caption => "$_SESSIONS", 
                                title =>["$_DATE", "$_USERS", "IN", "OUT", "$_SUM", "TT"],
                                cols_align => ['right', 'left', 'right', 'right', 'right', 'right'],
                                qs => $pages_qs             
                               } );


    my %report = ();
    foreach my $line (@$list) {
      if ($TT_COLORS[$line->[4]] ne '') {
        $table_sessions->{rowcolor}=$TT_COLORS[$line->[4]] 
       }
      else {
  	    $table_sessions->{rowcolor}=undef;
       }

       push  @{$report{"$line->[0]$line->[1]"}}, [ @$line ];
#      $table_sessions->addrow("<b>$line->[0]</b>", 
#        $line->[1], 
#        int2byte($line->[2]), 
#        int2byte($line->[3]),  
#        int2byte($line->[2]+$line->[3]),  
#        $line->[4]
#      );

     $total_in      += $line->[1];   
     $total_out     += $line->[2]; 
     $total_tunnel  += $line->[3];
     $total_sum     += $line->[4];
     $total_package += $line->[5];
    }
    

    while(my($k, $v)=each %report) {
      my @stats_array = @$v;

      if ($TT_COLORS[$stats_array[0][2]] ne '') {
         $table_sessions->{rowcolor}=$TT_COLORS[$stats_array[0][2]] 
       }
      else {
  	    $table_sessions->{rowcolor}=undef;
       }

      my $user_total_in=0;
      my $user_total_out=0;
      my $user_sum=0;

      $table_sessions->addtd(
                  $table->td($stats_array[0][0], { rowspan => ($#stats_array > 0) ? $#stats_array+2 : 2 } ),
                  $table->td($html->button($stats_array[0][1], "index=11&UID=$stats_array[0][6]"), { rowspan => ($#stats_array > 0) ? $#stats_array+2 : 2 } ),
                  $table->td($stats_array[0][2]), 
                  $table->td(int2byte($stats_array[0][3])), 
                  $table->td(int2byte($stats_array[0][4])),
                  $table->td(int2byte($stats_array[0][4]+$stats_array[0][3]))
      );

      $user_total_in+=$stats_array[0][3];
      $user_total_out+=$stats_array[0][4];
      $user_sum+=$stats_array[0][4]+$stats_array[0][3];

      for($i=1; $i<$#stats_array+1; $i++)  {

        if ($TT_COLORS[$stats_array[$i][2]] ne '') {
          $table_sessions->{rowcolor}=$TT_COLORS[$stats_array[$i][2]] 
         }
        else {
  	      $table_sessions->{rowcolor}=undef;
         } 

        $table_sessions->addrow($stats_array[$i][2], 
          int2byte($stats_array[$i][3]),
          int2byte($stats_array[$i][4]),
          int2byte($stats_array[$i][4]+$stats_array[$i][3]));
        
          $user_total_in+=$stats_array[$i][3];
          $user_total_out+=$stats_array[$i][4];
          $user_sum+=$stats_array[$i][4]+$stats_array[$i][3];
     }

     $table_sessions->{rowcolor}=$_COLORS[3];
     $table_sessions->addtd("<th>$_TOTAL:</th>", 
        "<th>". int2byte($user_total_in) ."</th>",
        "<th>". int2byte($user_total_out) ."</th>",
        "<th>". int2byte($user_sum). "</th>");
   
   }

 }
else {
  #Used Traffic
  $table_sessions = $html->table( { width => '100%',
	                              caption => "$_SESSIONS", 
                                title =>["$_DATE", "$_USERS", "IN", "OUT", $_SUM ],
                                cols_align => ['right', 'right', 'right', 'right', 'right'],
                                qs => $pages_qs             
                               } );

  $LIST_PARAMS{INTERVAL_TYPE}=3;
  my $list = $Ipn->reports_users({ %LIST_PARAMS });
  foreach my $line (@$list) {
    $table_sessions->addrow($html->button($line->[0], "index=$index&$type=$line->[0]$pages_qs"), 
       $line->[1],   
       int2byte($line->[2]), 
       int2byte($line->[3]),
       int2byte($line->[2]+$line->[3]),
       );
   
    $total_in      += $line->[1];   
    $total_out     += $line->[2]; 
    $total_tunnel  += $line->[3];
    $total_sum     += $line->[4];
    $total_package += $line->[5];
   }
}



$table = $html->table( { width => '100%',
	    cols_align => ['right', 'right', 'right', 'right', 'right'],
	    rows => [ [ "IN: <b>". int2byte($total_in) ."</b>",

                                            "OUT: <b>". int2byte($total_out). "</b>", 
                                            "TUNEL: <b>". int2byte($total_tunnel) ."</b>", 
                                            "SUM: <b>". int2byte($total_sum) ."</b>", 
                                            "PACKAGES: <b>$total_package</b>" 
                                           ] ],
                                rowcolor => $_COLORS[2]
                               } );


print $table_sessions->show() . $table->show();

#Users 
#Sessions
#Traffic 
#Time
#Money





}


