sub bonus_periodic_daily {
	 my ($attr) = @_;

   my $debug = $attr->{DEBUG} || 0;
   my $debug_output = '';
   $debug_output .= "Bonus - Monthly pariodic payments\n" if ($debug > 1);

	
   $DEBUG .= $debug_output;
   return $debug_output;
 }

#**********************************************************
#
#**********************************************************
sub bonus_periodic_monthly {
	 my ($attr) = @_;

   my $debug = $attr->{DEBUG} || 0;
   my $debug_output = '';
   $debug_output .= "Bonus - Monthly pariodic payments\n" if ($debug > 1);

   




	
   $DEBUG .= $debug_output;
   return $debug_output;
}



